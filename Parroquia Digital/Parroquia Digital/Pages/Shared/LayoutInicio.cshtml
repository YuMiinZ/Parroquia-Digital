<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Parroquia_Digital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/iglesiaDigital.css" />
</head>
<body>
    <header>
        <div class="custom-header">
            <div class="custom-title">
                @Model.CustomTitle
            </div>
        </div>

        <div class="custom-social">
            <div class="custom-social-title">
                Nuestras redes sociales
            </div>
            <div class="custom-social-icons">
                <div class="social-icon">
                    <a href="https://www.facebook.com/parroquiasanmiguelarcangel.desamparados/?locale=es_LA" target="_blank">
                        <img src="~/images/facebookIcon.png" alt="Facebook">
                        <span class="social-title">Facebook</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="https://api.whatsapp.com/send/?phone=%2B50684078221&text&type=phone_number&app_absent=0" target="_blank">
                        <img src="~/images/whatsappIcon.png" alt="WhatsApp">
                        <span class="social-title">WhatsApp</span>
                    </a>
                </div>
            </div>
        </div>

        <nav class="custom-navbar navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-links" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse navbar-links">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link custom-button" asp-area="" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-button" asp-area="" asp-page="/Horario">Horario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-button" asp-area="" asp-page="/EventosEspeciales">Eventos Especiales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-button" asp-area="" asp-page="/Grupos">Grupos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-button" href="https://www.facebook.com/parroquiasanmiguelarcangel.desamparados/?locale=es_LA" target="_blank">Encuesta de Satisfacción</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    


    <footer class="border-top footer text-muted">
        <div class="contact-info">
            <div class="contact-title">Información de contacto</div>
            <div class="contact-content">
                <pre>
                    Ubicación: 800 norte del Maxipalí de San Miguel, Desamparados, San José.
                    Número telefónico: +506 2510 0976
                    Correos: parroquiasanmigueldesamparados@gmail.com 
                    Horario de Oficina: M-V 8 a.m. a 12 p.m. 1 a 4 p.m. S 8 a.m. a 12 p.m.
                       
                    &copy; 2023 - Parroquia_Digital  
                </pre>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
