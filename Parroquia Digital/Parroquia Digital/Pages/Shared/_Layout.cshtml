<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Parroquia_Digital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/iglesiaDigital.css" />
</head>
<body>
    <header>
        <div class="custom-header2">
            <div class="custom-title2">
                @Model.CustomTitle
            </div>
        </div>
    </header>

    <nav class="custom-navbar navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-links" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse navbar-links">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link custom-button" asp-area="" asp-page="/Index">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-button" asp-area="" asp-page="/Horario">Horario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-button" asp-area="" asp-page="/EventosEspeciales">Eventos Especiales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-button" asp-area="" asp-page="/Grupos">Grupos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link custom-button" asp-area="" asp-page="/EncuestaSatisfaccion">Encuesta de Satisfacción</a>
                </li>
            </ul>
        </div>
    </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="contact-title">Contáctenos</div>
        <div class="contact-info">
            <div class="contact-content">
                <pre>
                <a href="https://waze.com/ul/hd1u0pj5sj" target="_blank">
                <img src="~/images/wazeicon.png" alt="Waze" style="float: left; margin-right: -40px; width: 45px;">
                <span style="margin-left: 8px;">Ubicación: 800 norte del Maxipalí de San Miguel, Desamparados, San José.</span>
                    </a>
                    Número telefónico: +506 2510 0976
                    Correo: parroquiasanmigueldesamparados@gmail.com 

                <img src="~/Images/relojicon.png" alt="Icono de reloj" style="float: left; margin-right: -20px; width: 45px;">
                <span style="margin-left: 8px;">Horario de Oficina: </span>
                            Martes a Viernes: De 8 a.m. a 12 p.m. y de 1 p.m a 4 p.m. 
                            Sábados: De 8 a.m. a 12 p.m.
                            Lunes y Domingos: Cerrado
                       
                    &copy; 2023 - Parroquia_Digital  
                </pre>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
